<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>AppMusic</title>
</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark px-5">
        <div class="container-fluid">
            <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
                <ul class="navbar-nav me-auto">
                    <% if(isAuthenticated){ %>
                        <li class="nav-item">
                            <a class="nav-link" href="/music">My playlist</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="/upload_track">Upload song</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/add_label">New label</a>
                        </li>
                    <% } %>
                </ul>
            </div>
            <div class="mx-auto order-0 pb-1">
                <a class="navbar-brand mx-auto" href="/">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="white" class="bi bi-play-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M6.271 5.055a.5.5 0 0 1 .52.038l3.5 2.5a.5.5 0 0 1 0 .814l-3.5 2.5A.5.5 0 0 1 6 10.5v-5a.5.5 0 0 1 .271-.445z"/>
                    </svg>
                    Play
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".dual-collapse2">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
                <ul class="navbar-nav ms-auto">
                    <% if(isAuthenticated){ %>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile">My profile</a>
                        </li>
                    <% } %>
                    <% if(!isAuthenticated){ %>
                        <li class="nav-item">
                            <a class="nav-link" href="/signin">Sign in</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/signup">Sign up</a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>
                    <% if(isAuthenticated){ %>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Sign out</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Login messages -->
    <% if(signupMessage != ''){ %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= signupMessage %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    
    <% if(signinMessage != ''){ %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= signinMessage %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    
    <% if(changesMessage != ''){ %>
        <div class="alert alert-secondary alert-dismissible fade show" role="alert">
            <%= changesMessage %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <!-- Labels and tracks messages -->
    <% if(labelMessage != ''){ %>
        <div class="alert alert-secondary alert-dismissible fade show" role="alert">
            <div><%= labelMessage %></div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    
    <% if(trackMessage != ''){ %>
        <div class="alert alert-secondary alert-dismissible fade show" role="alert">
            <%= trackMessage %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    
    <div class="p-5">
        <%- body %>
    </div>
</body>
</html>